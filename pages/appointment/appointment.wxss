/* pages/appointment/appointment.wxss */
.page {
background: #f7f7f7;
 height:100vh;
 width:100vw;
}
.list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 40rpx;  
} 

.app_title{
	font-family: PingFang SC;
	font-size: 24rpx;
	line-height: 73rpx;
	color: #666666;
}
 
.lists{
  width: 710rpx;
	height: 193rpx;
	background-color: rgba(255, 255, 255, 1);
	border-radius: 4px 4px 4px 4px;
  margin:20rpx auto;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list_title{ 
	font-size: 28rpx;
	color: #303030;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:1px solid rgba(230, 230, 230, 1);
}
.style_red{
  color: #e32828; 
}
.list_num{
font-size: 24rpx;
color: #aaaaaa;
line-height: 55rpx;
}
.list_time{
font-size: 24rpx;
color: #aaaaaa;
line-height: 55rpx;
}
.weui-cell::before{
  border-top:0;
}
.weui-cell{
  padding: 0;
}
