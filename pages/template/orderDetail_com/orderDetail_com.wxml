
 <template name="orderDetail">
  <view class="page">
    <view class='det_title'>
      <view class='title_name'>{{name}}</view>
      <view class='title_money'>+{{get}}</view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">商品名称</view>
        <view class="weui-cell__ft">{{name}}￥{{price}}x{{page}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">结算金额</view>
        <view class="weui-cell__ft">￥{{price}}</view>
      </view>
    </view>

    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">支付方式</view>
        <view class="weui-cell__ft">微信支付</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">订单编号</view>
        <view class="weui-cell__ft">{{number}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">订单时间</view>
        <view class="weui-cell__ft">{{time}}</view>
      </view>
    </view>
  </view>
</template> 