
 <template name="orderDetail">
  <view class="page">
    <view class='det_title'>
      <view class='title_name'>{{goods_detail.goods_name}}</view>
      <view class='title_money'>+{{goods_detail.price}}</view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">商品名称</view>
        <view class="weui-cell__ft">{{goods_detail.goods_name}}￥{{goods_detail.price}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">结算金额</view>
        <view class="weui-cell__ft">￥{{goods_detail.price}}</view>
      </view>
    </view>

    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">支付方式</view>
        <view class="weui-cell__ft">{{paytype}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">订单编号</view>
        <view class="weui-cell__ft">{{ordersn}}</view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">订单时间</view>
        <view class="weui-cell__ft">{{createtime}}</view>
      </view>
    </view>
  </view>
</template> 