
<!--预约和取消的订单详情  -->
<template name="orderDetail">
<view class="page">
   <view class='det_title'>
    <view class='title_n'>{{goods_detail.goods_name}}</view>
    <view class='title_m'>+{{goods_detail.price}}</view>
  </view>
 <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">商品名称</view>
      <view class="weui-cell__ft">{{goods_detail.goods_name}}￥{{goods_detail.price}}x{{page}}</view>
    </view>
     <view class="weui-cell">
      <view class="weui-cell__bd">预约时间</view>
      <view class="weui-cell__ft">{{appointment_time}}</view>
    </view>
  </view>

<view class="weui-cells weui-cells_after-title">
     <view class="weui-cell">
      <view class="weui-cell__bd">联系人</view>
      <view class="weui-cell__ft">{{carrier_realname}}</view>
    </view>
     <view class="weui-cell">
      <view class="weui-cell__bd">联系电话</view>
      <view class="weui-cell__ft">{{carrier_mobile}}</view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
     <view class="weui-cell">
      <view class="weui-cell__bd">订单编号</view>
      <view class="weui-cell__ft">{{ordersn}}</view>
    </view>
     <view class="weui-cell">
      <view class="weui-cell__bd">订单时间</view>
      <view class="weui-cell__ft">{{createtime}}</view>
    </view>
  </view>

</view>
</template>